# ====================================
# Database Configuration
# ====================================
# PostgreSQL connection string
DATABASE_URL="postgresql://username:password@localhost:5432/taxclusive"

# ====================================
# Authentication (NextAuth)
# ====================================
# The URL of your application (update for production)
NEXTAUTH_URL="http://localhost:3000"

# Random string for encrypting tokens (generate with: openssl rand -base64 32)
NEXTAUTH_SECRET="your-nextauth-secret-change-in-production"

# ====================================
# AWS Configuration
# ====================================
# AWS region for services (SES, S3, etc.)
AWS_REGION="us-east-1"

# AWS credentials (required for SES email sending)
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"

# ====================================
# Email Configuration (AWS SES)
# ====================================
# Display name for email sender
EMAIL_SENDER_NAME="Taxclusive"

# Verified email address in AWS SES (must be verified)
EMAIL_SENDER_ADDRESS="noreply@yourdomain.com"

# Email address to receive form submissions
EMAIL_RECIPIENT_ADDRESS="contact@yourdomain.com"

# Optional: Additional recipient name
EMAIL_RECIPIENT_NAME="Taxclusive Support"

# ====================================
# Security Configuration
# ====================================
# Secret for CSRF token generation (generate with: openssl rand -base64 32)
CSRF_SECRET="your-csrf-secret-change-in-production"

# ====================================
# Application Configuration
# ====================================
# Public base URL of the application
NEXT_PUBLIC_BASE_URL="http://localhost:3000"

# Application name (used in emails and meta tags)
NEXT_PUBLIC_APP_NAME="Taxclusive"

# ====================================
# Analytics (Optional)
# ====================================
# Google Analytics Measurement ID
NEXT_PUBLIC_GA_MEASUREMENT_ID="G-XXXXXXXXXX"

# Google Tag Manager ID
NEXT_PUBLIC_GTM_ID="GTM-XXXXXXX"

# ====================================
# Rate Limiting (Optional)
# ====================================
# Maximum requests per window
RATE_LIMIT_MAX="100"

# Rate limit window in milliseconds (15 minutes = 900000)
RATE_LIMIT_WINDOW_MS="900000"

# ====================================
# Development/Debug (Optional)
# ====================================
# Enable debug mode for development
DEBUG="false"

# Log level (error, warn, info, debug)
LOG_LEVEL="info"

# ====================================
# CDN/Storage (Optional)
# ====================================
# S3 bucket for file uploads (if using)
S3_BUCKET_NAME="taxclusive-uploads"

# CloudFront distribution ID (for cache invalidation)
CLOUDFRONT_DISTRIBUTION_ID="EXXXXXXXXXX"

# ====================================
# API Configuration (Optional)
# ====================================
# API timeout in milliseconds
API_TIMEOUT="30000"

# API retry attempts
API_RETRY_ATTEMPTS="3"

# ====================================
# Feature Flags (Optional)
# ====================================
# Enable/disable features
NEXT_PUBLIC_FEATURE_BLOG="true"
NEXT_PUBLIC_FEATURE_TESTIMONIALS="true"
NEXT_PUBLIC_FEATURE_NEWSLETTER="true"
NEXT_PUBLIC_FEATURE_APPOINTMENT="true"

# ====================================
# Monitoring (Optional)
# ====================================
# Sentry DSN for error tracking
SENTRY_DSN="https://xxxx@sentry.io/xxxx"

# Sentry environment
SENTRY_ENVIRONMENT="development"

# ====================================
# IMPORTANT NOTES:
# ====================================
# 1. Copy this file to .env.local for local development
# 2. Never commit .env.local or any file with real credentials
# 3. Generate secure secrets using: openssl rand -base64 32
# 4. Verify email addresses in AWS SES before using
# 5. Update all values for production deployment
# ====================================